    "version": "0.2.0",
    "configurations": [
        {
            "name": "Task Orchestrator",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build task-orchestrator",
            "program": "${workspaceFolder}/task-orchestrator/bin/Debug/net8.0/task-orchestrator.dll",
            "args": ["./data/input/2.dot", "2"],
            "cwd": "${workspaceFolder}/task-orchestrator",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "Task Worker",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build task-worker",
            "program": "${workspaceFolder}/task-worker/bin/Debug/net8.0/task-worker.dll",
            "args": [],
            "cwd": "${workspaceFolder}/task-worker",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}
